generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(cuid())
  name                String
  email               String    @unique
  password            String?
  phone               String?
  auth_type           AuthType
  imageURL            String?
  createdAt           DateTime? @default(now())
  lastPasswordUpdated DateTime?
}

enum AuthType {
  Google
  Github
  credentials
}

model Plan {
  id        String    @id @default(cuid())
  name      String
  category  String
  slug      String    @unique
  price     Float
  feature   String[]
  createdAt DateTime? @default(now())
  title     String?
}